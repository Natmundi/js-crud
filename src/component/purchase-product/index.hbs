{{#with this}}
<div class="form__card">
	<div class="card__content">
		<img src="{{img}}" alt="{{title}}" class="card__image">
		<h2 class="card__title">{{title}}</h1>
			<p class="card__description">{{description}}</p>
			{{#each category}}
			<span class="card__category card__category--{{id}}">{{text}}</span>
			{{/each}}
			<a href="/purchase-product?id={{id}}">
			{{>button text="Купити зараз" price=price}}
			</a>
	</div>
</div>
{{/with}}