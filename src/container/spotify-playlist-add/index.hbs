{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="main">
  <div class="main__content">

    {{#with data}}
    <h1 class="title title--center">Додати до плейлиста</h1>

    <form action="/spotify-playlist-add" method="POST">
      <ul class="track__list card">

        {{#each tracks}}
        <li class="track">
          <img src="{{image}}" alt="{{name}}" class="choose__image">
          <div class="track__content">
            <strong class="track__name">{{name}}</strong>
            <em class="track__author">{{author}}</em>
          </div>
          <a href="/spotify-playlist-add?playlistId={{../playlistId}}&trackId={{id}}">
            <img src="/png/add_button.png">
          </a>
        </li>
        {{/each}}
      </ul>

    </form>

    {{/with}}
  </div>
</main>

