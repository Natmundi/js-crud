 }}
<main>
  <section>
    <div class='form'>
      <h1 class="form__title">{{title}}</h1>
        <div class="form__content">
         
            {{#with data.purchases}}
              
                  <div class="form__card">
                    <small class="card__id">ID: {{id}}</small>
                    <h3 class="card__title">Товари {{product}}</h3>
                    <h4 class="card__title">
                      Сума замовлення{{totalPrice}} грн</h4>
                    <h4 class="card__title">
                    Нараховані бонуси {{bonus}}</h4>
                  </div>
                
              {{> divider}}
           
            {{/with}} 
            
         
        </div>
    </div>
  </section>
</main>
